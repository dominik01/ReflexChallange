extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Prihláste sa do ReflexChallange
                    div.account-wall
                        img(class='img-rounded img-responsive center-block', style='max-width:60%', src='https://cdn0.iconfinder.com/data/icons/follower/154/follower-man-user-login-round-512.png')
                        form(class='form-signin', action='/login', method='POST')
                            input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
                            input(type='password', name='password' class='form-control', placeholder='Password', required)
                            button(class='btn  btn-primary btn-block', type='submit') Prihlásiť
                            span.clearfix
                    a(href='/signup', class='text-center new-account') Vytvoriť účet
                    #message
                    if message
                        h1.text-center.error-message #{message}